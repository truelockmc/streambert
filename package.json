{
  "name": "streambert",
  "version": "1.0.0",
  "description": "Streambert Desktop App",
  "author": "truelockmc",
  "license": "GPL-3.0",
  "main": "main.js",
  "private": false,
  "scripts": {
    "dev": "vite build --watch",
    "start": "vite build && electron .",
    "dist": "vite build && electron-builder",
    "dist:linux": "vite build && electron-builder --linux",
    "dist:win": "vite build && electron-builder --win",
    "dist:mac": "vite build && electron-builder --mac"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "terser": "^5.46.0",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.truelockmc.streambert",
    "productName": "Streambert",
    "asar": true,
    "compression": "normal",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "package.json",
      "!**/*.map",
      "!**/*.md",
      "!**/node_modules/.cache/**"
    ],
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Utility",
      "icon": "public/icon.png"
    }
  }
}
